{
	"name"              : "clevercanyon/wpgroove-unique-attachment-slugs",
	"prefer-stable"     : true,
	"minimum-stability" : "dev",
	"config"            : {
		"allow-plugins" : {
			"dealerdirect/phpcodesniffer-composer-installer" : true,
			"composer/package-versions-deprecated"           : true
		}
	},
	"require-dev"       : {
		"clevercanyon/wpgroove-framework"     : "dev-main",
		"clevercanyon/wpgroove-framework-dev" : "dev-main"
	},
	"autoload-dev"      : {
		"WP_Groove\\Unique_Attachment_Slugs\\Tests\\" : [ "./tests/classes" ],
		"files"                                       : [ "./trunk/plugin.php" ]
	},
	"scripts"           : {
		"post-update-cmd"  : "[ $COMPOSER_DEV_MODE -eq 0 ] || ./vendor/clevercanyon/wpgroove-framework/dev/cli-tools/composer/on-post-update-cmd",
		"phpunit"          : "composer exec --profile -- phpunit --configuration ./.phpunit.xml --no-coverage",
		"phpunit-coverage" : "XDEBUG_MODE=coverage composer exec --profile -- phpunit --configuration ./.phpunit.xml",
		"webpack"          : "npx webpack --config ./.webpack.cjs"
	},
	"extra"             : {
		"clevercanyon" : {
			"$extends-packages" : [ "clevercanyon/wpgroove-framework" ],
			"&"                 : {
				"project" : {
					"data" : {
						"version"        : "1.0.0",
						"stable_tag"     : "1.0.0",

						"layout"         : "wp-plugin",
						"namespace_crux" : "WP_Groove\\Unique_Attachment_Slugs",
						"name"           : "Unique Attachment Slugs"
					}
				}
			}
		}
	}
}
