{
	"name"              : "clevercanyon/wpgroove-unique-attachment-slugs",
	"prefer-stable"     : true,
	"minimum-stability" : "dev",
	"config"            : {
		"allow-plugins" : {
			"dealerdirect/phpcodesniffer-composer-installer" : true,
			"composer/package-versions-deprecated"           : true
		}
	},
	"require-dev"       : {
		"clevercanyon/wpgroove-framework"     : "dev-main",
		"clevercanyon/wpgroove-framework-dev" : "dev-main"
	},
	"autoload-dev"      : {
		"files"                                       : [ "./.trunk.php" ],
		"WP_Groove\\Unique_Attachment_Slugs__Tests\\" : "./tests/classes"
	},
	"scripts"           : {
		"post-update-cmd" : "[ $COMPOSER_DEV_MODE -eq 0 ] || ./vendor/clevercanyon/wpgroove-framework/dev/toolchain/composer/post-update-cmd.php",
		"phpunit"         : "composer exec -- phpunit --configuration ./.phpunit.xml",
		"webpack"         : "npx webpack --config ./.webpack.cjs"
	},
	"extra"             : {
		"clevercanyon" : {
			"$extends-packages" : [ "clevercanyon/wpgroove-framework" ],
			"&"                 : {
				"scoper" : {
					"cfg" : {
						"exclude-constants" : [ ],
						"exclude-classes"   : [ ],
						"exclude-functions" : [ ]
					}
				}
			}
		}
	}
}
