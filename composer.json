{
	"name"              : "clevercanyon/wpgroove-unique-attachment-slugs",
	"prefer-stable"     : true,
	"minimum-stability" : "dev",
	"config"            : {
		"allow-plugins" : {
			"dealerdirect/phpcodesniffer-composer-installer" : true,
			"composer/package-versions-deprecated"           : true
		}
	},
	"require-dev"       : {
		"clevercanyon/wpgroove-framework"     : "dev-main",
		"clevercanyon/wpgroove-framework-dev" : "dev-main"
	},
	"autoload-dev"      : {
		"WP_Groove\\Unique_Attachment_Slugs\\Tests\\" : [ "./tests/classes" ],
		"files"                                       : [ "./trunk/plugin.php" ]
	},
	"scripts"           : {
		"webpack"                  : "npx webpack --config ./dev/.libs/webpack/config.cjs",
		"wp-docker"                : "./vendor/clevercanyon/utilities/dev/cli-tools/docker/wp/docker",

		"phpunit"                  : "composer exec --profile -- phpunit --configuration ./dev/.libs/phpunit/config.xml --no-coverage --no-logging",
		"phpunit~distro"           : "composer exec --profile -- phpunit --configuration ./dev/.libs/phpunit/config~distro.xml --no-coverage --no-logging",
		"phpunit~coverage"         : "XDEBUG_MODE=coverage composer exec --profile -- phpunit --configuration ./dev/.libs/phpunit/config.xml --no-logging",

		"phpunit~wp-docker"        : "composer exec --profile -- phpunit --configuration ./dev/.libs/phpunit/config.xml --no-coverage --no-logging --do-not-cache-result",
		"phpunit~wp-docker~distro" : "composer exec --profile -- phpunit --configuration ./dev/.libs/phpunit/config~distro.xml --no-coverage --no-logging --do-not-cache-result",

		"phpunit~ci"               : "composer exec --profile -- phpunit --configuration ./dev/.libs/phpunit/config.xml --no-coverage",
		"phpunit~ci~distro"        : "composer exec --profile -- phpunit --configuration ./dev/.libs/phpunit/config~distro.xml --no-coverage",

		"post-install-cmd"         : "[ $COMPOSER_DEV_MODE -eq 0 ] || ./vendor/clevercanyon/wpgroove-framework/dev/cli-tools/composer/on-post-install-cmd",
		"post-update-cmd"          : "[ $COMPOSER_DEV_MODE -eq 0 ] || ./vendor/clevercanyon/wpgroove-framework/dev/cli-tools/composer/on-post-update-cmd"
	},
	"extra"             : {
		"clevercanyon" : {
			"$extends-packages" : [ "clevercanyon/wpgroove-framework" ],
			"&"                 : {
				"project" : {
					"data" : {
						"version"        : "1.0.0",
						"stable_tag"     : "1.0.0",

						"layout"         : "wp-plugin",
						"namespace_crux" : "WP_Groove\\Unique_Attachment_Slugs",
						"name"           : "Unique Attachment Slugs"
					}
				}
			}
		}
	}
}
