<?xml version="1.0" encoding="UTF-8" ?>
<!--
 * PHPUnit config file.
 *
 * @since 1.0.0
 *
 * @note PHPUnit is not aware of this config file's location.
 * Be sure to pass in the `-c ./.phpunit.xml` configuration argument when calling.
 * The easiest way is just to set up PHPUnit in `composer.json`. There are other args, too.
 *
 * @note PLEASE DO NOT EDIT THIS FILE!
 * This file and the contents of it are updated automatically.
 * Instead of editing, please see source repository @ <https://git.io/JD8Zo>.
-->
<phpunit
	colors="true"

	forceCoversAnnotation="true"
	beStrictAboutCoversAnnotation="false"

	beStrictAboutOutputDuringTests="true"
	beStrictAboutTodoAnnotatedTests="true"
	beStrictAboutChangesToGlobalState="true"
	beStrictAboutTestsThatDoNotTestAnything="true"
	beStrictAboutResourceUsageDuringSmallTests="true"

	bootstrap="./vendor/autoload.php"
	cacheResultFile="._x/phpunit/result.cache"

	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd"
>
    <testsuites>
        <testsuite name="tests">
            <directory suffix="Tests.php">tests/classes/Tests</directory>
        </testsuite>
    </testsuites>

    <coverage cacheDirectory="./._x/phpunit/coverage/._cache">
        <include>
            <directory suffix=".php">src</directory>
        </include>
        <report>
            <xml outputDirectory="./._x/phpunit/coverage/xml" />
            <html outputDirectory="./._x/phpunit/coverage/html" />
            <clover outputFile="./._x/phpunit/coverage/clover.xml" />
    		<crap4j outputFile="./._x/phpunit/coverage/crap4j.xml" threshold="50" />
    		<text outputFile="./._x/phpunit/coverage/text.txt" />
    		<php outputFile="./._x/phpunit/coverage/php.php" />
        </report>
    </coverage>

    <logging>
		<junit outputFile="./._x/phpunit/logging/junit.xml" />
		<teamcity outputFile="./._x/phpunit/logging/teamcity.txt" />
		<testdoxHtml outputFile="./._x/phpunit/logging/testdox.html" />
		<testdoxText outputFile="./._x/phpunit/logging/testdox.txt" />
		<testdoxXml outputFile="./._x/phpunit/logging/testdox.xml" />
		<text outputFile="./._x/phpunit/logging/text.txt" />
    </logging>
</phpunit>
