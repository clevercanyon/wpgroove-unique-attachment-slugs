<?xml version="1.0" encoding="UTF-8" ?>
<!--
 * PHPUnit config file.
 *
 * @since 1.0.0
 *
 * @note PHPUnit is not aware of this config file's location.
 * Be sure to pass in the `-c ./dev/.libs/phpunit/config~distro.xml` configuration argument when calling.
 * The easiest way is just to set up PHPUnit in `composer.json`. There are other args, too.
 *
 * @note PLEASE DO NOT EDIT THIS FILE!
 * This file and the contents of it are updated automatically.
 * - Instead of editing this file, please review source repository {@see https://o5p.me/LevQOD}.
-->
<phpunit
	colors="true"

	forceCoversAnnotation="false"
	beStrictAboutCoversAnnotation="false"

	beStrictAboutOutputDuringTests="true"
	beStrictAboutTodoAnnotatedTests="true"
	beStrictAboutChangesToGlobalState="true"
	beStrictAboutTestsThatDoNotTestAnything="true"
	beStrictAboutResourceUsageDuringSmallTests="true"

	defaultTestSuite="tests"
	bootstrap="../../../._x/distro-tests/tests/bootstrap.php"
	cacheResultFile="../../../._x/phpunit/~wp-docker~distro/result.cache"

	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd"
>
    <php>
		<env name="IS_PHPUNIT" value="1" />
        <env name="IS_PHPUNIT_DISTRO" value="1" />
        <env name="IS_PHPUNIT_WP_DOCKER" value="1" />
        <env name="IS_PHPUNIT_WP_DOCKER_DISTRO" value="1" />
    </php>

    <testsuites>
        <testsuite name="tests">
            <directory suffix="Tests.php">../../../._x/distro-tests/tests/classes/Tests</directory>
            <directory suffix="Tests.php">../../../._x/distro-tests/tests/classes/WP_Docker</directory>
        </testsuite>
    </testsuites>

    <coverage cacheDirectory="../../../._x/phpunit/~wp-docker~distro/coverage/._cache">
        <include>
            <directory suffix=".php">../../../._x/distro-tests/src</directory>
        </include>
        <report>
            <xml outputDirectory="../../../._x/phpunit/~wp-docker~distro/coverage/xml" />
            <html outputDirectory="../../../._x/phpunit/~wp-docker~distro/coverage/html" />
            <clover outputFile="../../../._x/phpunit/~wp-docker~distro/coverage/clover.xml" />
    		<crap4j outputFile="../../../._x/phpunit/~wp-docker~distro/coverage/crap4j.xml" threshold="50" />
    		<text outputFile="../../../._x/phpunit/~wp-docker~distro/coverage/text.txt" />
    		<php outputFile="../../../._x/phpunit/~wp-docker~distro/coverage/php.php" />
        </report>
    </coverage>

    <logging>
		<junit outputFile="../../../._x/phpunit/~wp-docker~distro/logging/junit.xml" />
		<teamcity outputFile="../../../._x/phpunit/~wp-docker~distro/logging/teamcity.txt" />
		<testdoxHtml outputFile="../../../._x/phpunit/~wp-docker~distro/logging/testdox.html" />
		<testdoxText outputFile="../../../._x/phpunit/~wp-docker~distro/logging/testdox.txt" />
		<testdoxXml outputFile="../../../._x/phpunit/~wp-docker~distro/logging/testdox.xml" />
		<text outputFile="../../../._x/phpunit/~wp-docker~distro/logging/text.txt" />
    </logging>
</phpunit>
